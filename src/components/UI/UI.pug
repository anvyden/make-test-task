include ~/components/text/text
include ~/components/fields/fields
include ~/components/selects/selects
include ~/components/buttons/buttons
include ~/components/controls/controls
include ~/components/accordions/accordions

mixin UI({ title } = {})
  .ui(id='ui')
    .ui__title
      +text({
        text: title,
        type: 'h2',
        color: 'primary',
        weight: 'bold'
      })
    .ui__fields
      +fields({ title: 'Текстовое поле' })
    .ui__selects 
      +selects({
        title: 'Выпадающий список',
        description: 'Компонент состоит из текстового поля и выпадающей подсказки'
      })
    .ui__buttons 
      +buttons({ title: 'Кнопка' })
    .ui__controls
      +controls({ title: 'Чекбокс, радиобаттон' })
    .ui__accordions
      +accordions({ title: 'Аккордеон' })