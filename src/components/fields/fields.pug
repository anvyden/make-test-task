include ~/components/text-field/text-field

mixin fields()
  .fields
    +text-field({
      type: 'email',
      placeholder: 'E-mail',
      name: 'email',
      prompt: 'E-mail',
      error: 'Текст ошибки',
      dataType: 'input',
      hasJsClass: true
    })
    +text-field({
      type: 'email',
      state: 'Ховер',
      placeholder: 'E-mail',
      name: 'email',
      hovered: true
    })
    +text-field({
      type: 'email',
      state: 'Ввод',
      prompt: 'E-mail',
      promptVisible: true,
      placeholder: 'E-mail',
      value: 'office@make.st',
      name: 'email',
      focused: true
    })
    +text-field({
      type: 'email',
      state: 'Ошибка',
      prompt: 'E-mail',
      promptVisible: true,
      error: 'Текст ошибки',
      placeholder: 'E-mail',
      value: 'officemake.st',
      name: 'email',
      invalid: true
    })
